@{
    ViewBag.Title = "Intrebare2";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model LucruIndividualTSI.Model

<form action="@Url.Action("Intrebare2", "Home")" method="post">
     <div id="outerBox">
          <div id="quest">Toți angajații sunt instruiți cu privire la politica de securitate a informației?</div>
          <div style="text-align: center; padding: 20px;">
               <input type="submit" name="response" value="Da" style="background-color: #4CAF50; color: white; padding: 40px 70px; text-align: center; text-decoration: none; display: inline-block; font-size: 32px; margin: 4px 2px; cursor: pointer; border: none; border-radius: 4px;" />
               <input type="submit" name="response" value="Nu" style="background-color: #4CAF50; color: white; padding: 40px 70px; text-align: center; text-decoration: none; display: inline-block; font-size: 32px; margin: 4px 2px; cursor: pointer; border: none; border-radius: 4px;" />
          </div>
     </div>
          <div style="display: flex; justify-content: space-between; align-items: flex-end; height: 300px; position: relative;">
               <a href="@Url.Action("Intrebare1", "Home")">
                    <button type="button" id="previous">Înapoi</button>
               </a>
               <a href="@Url.Action("Intrebare3", "Home")">
                    <button type="button" id="next">Înainte</button>
               </a>
          </div>
</form>
